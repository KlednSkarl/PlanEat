<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home"
    android:orientation="vertical"


    android:background="@drawable/bg_reg"
    android:padding="5dp">




            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/plan_eat"
                android:paddingBottom="20dp"
                android:layout_marginBottom="50dp"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="20dp"
                android:backgroundTint="#C4A484"
                app:cardCornerRadius="20dp"


               >


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:paddingLeft="30dp"

                    android:textSize="50sp"
                    android:text="Profile"
                    />


            </androidx.cardview.widget.CardView><!-- profile -->

            <androidx.cardview.widget.CardView

                android:id="@+id/meals"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:elevation="20dp"
                android:padding="20dp"
                app:cardCornerRadius="20dp"
                android:onClick="Meals"
                android:backgroundTint="#C4A484">



                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Meals"
                    android:layout_gravity="left"
                    android:paddingLeft="30dp"

                    android:textSize="50sp"/>

            </androidx.cardview.widget.CardView> <!-- meals -->

            <androidx.cardview.widget.CardView
                android:id="@+id/goals"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:elevation="20dp"

                app:cardCornerRadius="20dp"
                android:backgroundTint="#C4A484">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goals"
                    android:layout_gravity="left"
                    android:paddingLeft="30dp"

                    android:textSize="50sp"
             />

            </androidx.cardview.widget.CardView>





</LinearLayout>